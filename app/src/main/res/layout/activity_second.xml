<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.dell.dailyplanner.SecondActivity"
    android:background="@drawable/root_calling_gradient"
    android:id="@+id/MainRootLayout"
    android:padding="20dp"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="What We Offer"
            android:textColor="#fff"
            android:textStyle="bold"
            android:textSize="30dp"
            android:layout_marginTop="50dp"
            android:layout_gravity="center"
            />
        <Button
        android:id="@+id/overview"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_gravity="center"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="100dp"
        android:background="#40e0d0"
        android:gravity="center"
        android:text="Overview"
        android:onClick="morningclick"
        android:textStyle="bold"
        android:textColor="@android:color/background_light"
        android:textSize="20sp" />

    <Button
        android:id="@+id/marks"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_gravity="center"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="9.9dp"
        android:background="#40e0d0"
        android:gravity="center"
        android:text="Marks"
        android:onClick="marksclick"
        android:textStyle="bold"
        android:textColor="@android:color/background_light"
        android:textSize="20sp" />

    <Button
        android:id="@+id/attendance"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_gravity="center"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="9.9dp"
        android:background="#40e0d0"
        android:gravity="center"
        android:onClick="attendanceclick"
        android:text="Attendance"
        android:textColor="@android:color/background_light"
        android:textSize="20sp"
        android:textStyle="bold"/>
    </LinearLayout>
    </ScrollView>
</android.support.constraint.ConstraintLayout>
