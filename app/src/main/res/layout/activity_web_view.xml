<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.dell.dailyplanner.WebView"
    android:background="@drawable/root_calling_gradient"
    android:id="@+id/MainRootLayout"
    android:padding="20dp"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Faculty Members of CSE110:"
                android:textAlignment="center"
                android:textSize="22.5dp"
                android:textStyle="bold"
                android:layout_marginTop="15dp"
                android:textColor="#fff"
                />

            <TextView
                android:id="@+id/titl"
                android:layout_width="match_parent"
                android:layout_height="15dp"
                android:textColor="@android:color/white"
                tools:textColor="@android:color/white" />
            <Button
                android:id="@+id/buttonymorn"
                style="@style/button_text"
                android:layout_width="300dp"
                android:layout_height="45dp"
                android:layout_gravity="center"
                android:background="@drawable/yellow_button"
                android:text="Rubayat Ahmed Khan (rak)"
                android:onClick="rak"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/titleo"
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:textColor="@android:color/white"
                tools:textColor="@android:color/white" />

            <Button
                android:id="@+id/buttonimorn"
                style="@style/button_text"
                android:layout_width="300dp"
                android:layout_height="45dp"
                android:layout_gravity="center"
                android:background="@drawable/yellow_button"
                android:text="Md. Saiful Islam (sai)"
                android:onClick="sai"
                android:textSize="17sp" />
            <TextView
                android:id="@+id/titlew"
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:textColor="@android:color/white"
                tools:textColor="@android:color/white" />
            <Button
                android:id="@+id/buttonm"
                style="@style/button_text"
                android:layout_width="300dp"
                android:layout_height="45dp"
                android:layout_gravity="center"
                android:background="@drawable/yellow_button"
                android:text="Dipankar Chaki (DC)"
                android:onClick="dc"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/title2"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:textColor="@android:color/white"
                tools:textColor="@android:color/white" />
        </LinearLayout>
    </ScrollView>
</android.support.constraint.ConstraintLayout>
